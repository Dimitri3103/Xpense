  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch API",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outFiles": [
        "${workspaceFolder}/out/**/*.js"
      ],
      "program": "${workspaceFolder}/dist/index",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": [
        "--require=dotenv/config"
      ]
    }
  ]
}
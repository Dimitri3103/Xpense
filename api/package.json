{
  "name": "api",
  "version": "0.0.1",
  "description": "Xpense Core API",
  "main": "index.js",
  "scripts": {
    "webpack": "webpack  --config webpack.dev.ts",
    "webpack:prod": "webpack --config webpack.prod.ts",
    "start": "node dist/index",
    "watch": "nodemon",
    "api-start": "docker-compose  up",
    "api-stop": "docker-compose stop",
    "api-build": "docker-compose down && docker-compose build",
    "dev": "npm run webpack & npm run start",
    "dev_": "concurrently --kill-others \"npm run webpack\" \"npm run start\"",
    "docs:build": "swagger-cli bundle  ./api-docs/swagger.yaml --outfile ./api-docs/build/swagger.yaml --type yaml",
    "docs:validate": "npm run docs:build && swagger-cli validate  ./api-docs/build/swagger.yaml "
  },
  "keywords": [
    "api",
    "xpense"
  ],
  "author": "Bulldozer Inc",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@apidevtools/swagger-cli": "^4.0.4",
    "@nartc/automapper": "^7.0.4",
    "auth0": "^2.31.1",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "express-jwt-authz": "^2.4.1",
    "firebase-admin": "^9.8.0",
    "g": "^2.0.1",
    "helmet": "^4.3.1",
    "jwks-rsa": "^1.12.3",
    "mime-types": "^2.1.28",
    "multer": "^1.4.2",
    "nano": "^9.0.1",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0-alpha.6",
    "swagger-ui-express": "^4.1.6",
    "ts-node": "^10.2.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/auth0": "^2.20.12",
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.9",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.9",
    "@types/express-jwt": "0.0.42",
    "@types/helmet": "^4.0.0",
    "@types/http-errors": "^1.8.0",
    "@types/multer": "^1.4.5",
    "@types/node": "^14.14.20",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/uuid": "^8.3.0",
    "@types/yamljs": "^0.2.31",
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.6",
    "openapi-types": "^7.2.3",
    "ts-loader": "^6.2.2",
    "typescript": "^4.1.3",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-merge": "^5.7.3",
    "webpack-node-externals": "^1.7.2",
    "yamljs": "^0.3.0"
  }
}
